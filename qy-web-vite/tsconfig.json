{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "compilerOptions": {
      "types": [
        "pinia-plugin-persist"
      ]
    },
//    "ts-node": {
//      "compilerOptions": {
//        "module": "CommonJS"
//      }
//    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue",   "server-dev.js", "server.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
